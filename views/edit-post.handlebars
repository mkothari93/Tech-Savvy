<article class='dashboardPage'>  
    <a href='/dashboard' class='bcktodash'> &larr; Back to dashboard</a> 
    <h2>
        Edit Post
    </h2>

    <form class='edit-post-form'>
        <div>
            <label for='title'>Title</label>
            <input
                name='title'
                type='text'
                value='{{post.title}}'
            />
        </div>
        <div>
            <label for='recipe-name'>Body</label>
            <textarea
                name='post-body'
                type='text'
            />{{post.post_body}}</textarea>
        </div>
        <div>
            <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
        </div>

    <button class='btn' type='submit'>Save Post</button>
    <button type='button' class='delete-post-btn btn'>Delete Post</button>
  </form>
</article>

{{>comments post.comments}}

<script src='/javascript/edit-post.js'></script>
<script src='/javascript/delete-post.js'></script>
<script src='/javascript/comment.js'></script>